    "version": "0.2.0",
    "configurations": [
        {
            "name": "editor2 ftp",
            "type": "by-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/editor2",
            "programArgs": "-p debugProject.epr",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build"
        },
        {
            "name": "editor2 fs",
            "type": "by-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/editor2",
            "programArgs": "-p debugProjectFs.epr",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build"
        },
        {
            "name": "editor2 fs wayland",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/editor2",
            "environment": [{"name": "LSAN_OPTIONS", "value": "verbosity=1:log_threads=1"}, {"name": "SDL_VIDEODRIVER", "value": "wayland"}],
            "args": ["-p", "debugProjectFs.epr"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
        },
        {
            "name": "editor2",
            "type": "by-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/editor2",
            "programArgs": "",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build"
        }
    ]
}
